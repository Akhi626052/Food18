<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginVertical="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/popular_bg"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgProduct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/food"
                app:shapeAppearanceOverlay="@style/FoodStyle">

            </com.google.android.material.imageview.ShapeableImageView>

            <LinearLayout
                android:layout_marginVertical="7dp"
               android:layout_marginHorizontal="7dp"
                android:layout_width="110dp"
                android:layout_height="25dp"
                android:backgroundTint="@color/green"
                android:background="@drawable/ctg_item_bg"
                android:weightSum="2"
                >
                <TextView
                    android:id="@+id/txtProductRs"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:text="Rs 199"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/ctg_item_bg"
                    >

                </TextView>

                <TextView
                    android:id="@+id/txtDiscount"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:text="10% off"
                    android:textSize="10sp"
                    android:singleLine="true"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    >

                </TextView>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/txtNameProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cheese Corn Sandwich"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:singleLine="true"
            android:textSize="12sp"
            android:layout_marginLeft="15dp"
            >

        </TextView>
        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/txtExtraFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extra Cheese Corn"
            android:textColor="#8B000000"
            android:singleLine="true"
            android:textSize="10sp"
            android:layout_marginLeft="15dp"
            >

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/txtRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="4.5"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                >

            </TextView>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/star_icon"
                >

            </ImageView>

            <TextView
                android:id="@+id/txtReviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(25+)"
                android:textColor="#8B000000"
                android:textSize="7sp"
                android:layout_marginLeft="5dp"
                >

            </TextView>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/veg"
                >

            </ImageView>

        </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>