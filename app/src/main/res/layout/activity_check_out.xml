<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.CheckOut">

    <include
        android:id="@+id/Header"
        layout="@layout/custom_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="5dp"
                android:id="@+id/RvOCheckOutItm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </androidx.recyclerview.widget.RecyclerView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                >
                <LinearLayout
                    android:paddingVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >


                    <TextView
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:text="Delivery Address"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="16sp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:id="@+id/Order_Address"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:textColor="@color/lightGray"
                        android:text="Skye Earth Corporate Park, 605, AB Road, Indore, Madhya Pradesh 452010                                                                              +91 9123 456 789"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14sp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:textColor="@color/black"
                android:text="Order Summary"
                android:fontFamily="@font/roboto_medium"
                android:textSize="16sp"
                android:layout_marginHorizontal="15dp"
                android:layout_height="wrap_content">

            </TextView>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:text="Sub Total"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:text="Rs . 388"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                </TextView>

            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:text="Tax and Fees"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:text="Rs . 22"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_height="wrap_content">

                </TextView>

            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:text="Discount"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:text="Rs . 20"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_height="wrap_content">

                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                >
                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:text="Delivery Charges"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:text="Rs . 20"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_height="wrap_content">

                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                >
                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:text="Tax and Fees"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:text="Rs . 22"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_height="wrap_content">

                </TextView>

            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="#E9E9E9"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp"

                >
                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:text="Grand Total"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:text="Rs . 400"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                </TextView>

            </RelativeLayout>


            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:textColor="@color/black"
                android:text="Select your payment method"
                android:fontFamily="@font/roboto_medium"
                android:textSize="16sp"
                android:layout_marginHorizontal="15dp"
                android:layout_height="wrap_content">

            </TextView>

            <RadioGroup
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                >


                <RadioButton
                    android:id="@+id/RadioUPI"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:buttonTint="@color/black"
                    android:text=" UPI/credit card/debit card"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_medium"
                    >

                </RadioButton>

                <RadioButton
                    android:id="@+id/RadioCod"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="  COD \u0026 \u20B9"
                    android:buttonTint="@color/black"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_medium"
                    >

                </RadioButton>

            </RadioGroup>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/BtnReference"
                android:textAllCaps="false"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_width="212dp"
                android:layout_height="50dp"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/white"
                android:text="Pay Now!"
                android:background="@drawable/bg_checkout_btn"
                >

            </androidx.appcompat.widget.AppCompatButton>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>