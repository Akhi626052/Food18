<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginVertical="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginVertical="2dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/img"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_width="45dp"
                android:src="@drawable/notification"
                android:padding="13dp"
                android:background="@drawable/round_rectangle"
                android:backgroundTint="@color/red"
                android:layout_height="45dp"
                app:tint="@color/white">

            </ImageView>

            <LinearLayout
                android:layout_toRightOf="@+id/img"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:layout_weight=".94"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="match_parent">



                <TextView
                    android:text="Publishing and graphic design"
                    android:id="@+id/txtNotifyHead"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    >

                </TextView>

                <TextView
                    android:layout_marginTop="3dp"
                    android:text="Lorem Ipsum is simply dummy text of the printi and typesetting industry."
                    android:id="@+id/txtNotifyMess"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="match_parent"
                    android:textColor="@color/halfBlack"
                    android:layout_height="wrap_content"
                    >

                </TextView>



            </LinearLayout>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>