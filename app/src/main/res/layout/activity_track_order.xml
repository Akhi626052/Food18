<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.TrackOrder">


    <include
        android:id="@+id/Header"
        layout="@layout/custom_toolbar"/>



    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/LnStatus"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/yellow"
        android:orientation="vertical"
        android:elevation="4dp"
        android:background="@drawable/my_order_shape"
        >

        <RelativeLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"

            >
            <LinearLayout
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"

                >
                <TextView
                    android:id="@+id/orderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order ID: 5678904"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/black"
                    >
                </TextView>
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/orderDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 June ,2023 at 10:10 AM"
                    android:textSize="8sp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black"
                    >
                </TextView>

            </LinearLayout>


            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/ComingFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_regular"
                android:text="Upcoming"
                android:textColor="@color/black"


                >

            </TextView>

        </RelativeLayout>



        <LinearLayout
            android:padding="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/my_order_shape"
            >

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/logo2"
                >

            </ImageView>

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Foods 18"
                    >

                </TextView>
                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightGray"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Skye,Earth Corporate Park,Ab Road , 605 ,Indore"
                    >

                </TextView>


            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <RelativeLayout
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="283dp"
        >

        <ImageView
            android:src="@drawable/indicators"
            android:layout_width="25dp"
            android:layout_height="283dp">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="283dp"
            android:orientation="vertical"
            android:weightSum="3"
            >
            <TextView
                android:layout_weight="1"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Confirm Order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            </TextView>
            <TextView
                android:layout_weight="1"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            </TextView>
            <TextView
                android:layout_weight="1"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Out for Delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            </TextView>
            <TextView
                android:layout_weight="1"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Delivered Order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            </TextView>
        </LinearLayout>



    </RelativeLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/bg_checkout_btn"
        android:text="Cancel Order"
        android:textAllCaps="false"
        android:paddingHorizontal="75dp"
        android:gravity="center"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_bold"
        android:layout_gravity="center"
        android:textColor="@color/white"
        >

    </androidx.appcompat.widget.AppCompatButton>





</LinearLayout>